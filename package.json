{
  "name": "pkg-placeholder",
  "version": "0.0.0",
  "description": "_description_",
  "keywords": [
    "pkg-placeholder"
  ],
  "homepage": "https://github.com/ericc-ch/pkg-placeholder",
  "bugs": "https://github.com/ericc-ch/pkg-placeholder/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericc-ch/pkg-placeholder.git"
  },
  "author": "Erick Christian <erickchristian48@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "default": "./dist/main.js"
    }
  },
  "bin": {
    "pkg-placeholder": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run ./scripts/build.ts",
    "lint": "eslint .",
    "prepack": "bun run build",
    "prepare": "simple-git-hooks",
    "release": "bumpp && bun publish --access public",
    "start": "tsx src/cli.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*": "bun run lint --fix"
  },
  "dependencies": {
    "rou3": "^0.6.1",
    "tiny-invariant": "^1.3.3",
    "tinyexec": "^1.0.1"
  },
  "devDependencies": {
    "@echristian/eslint-config": "^0.0.42",
    "bumpp": "^10.1.0",
    "eslint": "^9.26.0",
    "jiti": "^2.4.2",
    "lint-staged": "^15.5.2",
    "prettier-plugin-packagejson": "^2.5.11",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
