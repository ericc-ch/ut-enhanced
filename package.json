{
  "name": "pkg-placeholder",
  "version": "0.0.0",
  "description": "_description_",
  "keywords": [
    "pkg-placeholder"
  ],
  "homepage": "https://github.com/ericc-ch/pkg-placeholder",
  "bugs": "https://github.com/ericc-ch/pkg-placeholder/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericc-ch/pkg-placeholder.git"
  },
  "author": "Erick Christian <erickchristian48@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "default": "./dist/main.js"
    }
  },
  "bin": {
    "pkg-placeholder": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "dev:serve": "sirv dist",
    "lint": "eslint .",
    "prepack": "bun run build",
    "prepare": "simple-git-hooks",
    "release": "bumpp && bun publish --access public",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*": "bun run lint --fix"
  },
  "dependencies": {
    "lit": "^3.3.0",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@echristian/eslint-config": "^0.0.42",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/bun": "^1.2.13",
    "bumpp": "^10.1.0",
    "eslint": "^9.26.0",
    "lint-staged": "^16.0.0",
    "prettier-plugin-packagejson": "^2.5.12",
    "rollup": "^4.40.2",
    "rollup-plugin-delete": "^3.0.1",
    "simple-git-hooks": "^2.13.0",
    "sirv-cli": "^3.0.1",
    "typescript": "^5.8.3"
  }
}
